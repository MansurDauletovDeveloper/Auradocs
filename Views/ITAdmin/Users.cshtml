@model IEnumerable<DocumentFlow.Models.ViewModels.ITUserViewModel>
@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">
        <i class="bi bi-people-fill me-2"></i>Управление пользователями
    </h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">IT Администрирование</a></li>
        <li class="breadcrumb-item active">Пользователи</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Фильтры -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Поиск</label>
                    <input type="text" name="searchTerm" class="form-control" 
                           placeholder="Имя или email..." value="@ViewBag.SearchTerm">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Фильтр по роли</label>
                    <select name="roleFilter" class="form-select">
                        <option value="">Все роли</option>
                        @foreach (var role in (IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.AvailableRoles)
                        {
                            <option value="@role.Value" selected="@role.Selected">@role.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search me-1"></i>Найти
                    </button>
                    <a asp-action="Users" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>Сбросить
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Таблица пользователей -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-table me-1"></i>
            Список пользователей (@Model.Count())
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Пользователь</th>
                            <th>Должность / Отдел</th>
                            <th>Роли</th>
                            <th>Права</th>
                            <th>Последний вход</th>
                            <th>Статус</th>
                            <th class="text-center">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@user.FullName</strong>
                                    <br />
                                    <small class="text-muted">@user.Email</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.Position))
                                    {
                                        <span>@user.Position</span><br />
                                    }
                                    @if (!string.IsNullOrEmpty(user.Department))
                                    {
                                        <small class="text-muted">@user.Department</small>
                                    }
                                </td>
                                <td>
                                    @foreach (var role in user.RoleDisplayNames)
                                    {
                                        <span class="badge bg-primary me-1 mb-1">@role</span>
                                    }
                                    @if (!user.Roles.Any())
                                    {
                                        <span class="badge bg-danger">Нет ролей!</span>
                                    }
                                </td>
                                <td>
                                    @if (user.CanExport)
                                    {
                                        <span class="badge bg-success" title="Экспорт"><i class="bi bi-file-earmark-arrow-down"></i></span>
                                    }
                                    @if (user.CanPrint)
                                    {
                                        <span class="badge bg-success" title="Печать"><i class="bi bi-printer"></i></span>
                                    }
                                    @if (user.CanDownload)
                                    {
                                        <span class="badge bg-success" title="Скачивание"><i class="bi bi-download"></i></span>
                                    }
                                    @if (!user.CanExport && !user.CanPrint && !user.CanDownload)
                                    {
                                        <span class="text-muted">Ограничены</span>
                                    }
                                </td>
                                <td>
                                    @if (user.LastLogin.HasValue)
                                    {
                                        <span title="@user.LastLogin.Value.ToLocalTime().ToString("dd.MM.yyyy HH:mm:ss")">
                                            @user.LastLogin.Value.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Не входил</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Активен</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Отключен</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="EditRoles" asp-route-id="@user.Id" 
                                       class="btn btn-sm btn-primary" title="Редактировать права">
                                        <i class="bi bi-shield-lock"></i>
                                    </a>
                                    <a asp-action="UserLoginHistory" asp-route-id="@user.Id" 
                                       class="btn btn-sm btn-outline-secondary" title="История входов">
                                        <i class="bi bi-clock-history"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
