@model DocumentFlow.Models.ViewModels.UserLoginHistoryViewModel
@{
    ViewData["Title"] = "История входов - " + Model.FullName;
}

<div class="container-fluid px-4">
    <h1 class="mt-4">
        <i class="bi bi-clock-history me-2"></i>История входов
    </h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">IT Администрирование</a></li>
        <li class="breadcrumb-item"><a asp-action="Sessions">Мониторинг сессий</a></li>
        <li class="breadcrumb-item active">@Model.FullName</li>
    </ol>

    <div class="row">
        <!-- Информация о пользователе -->
        <div class="col-xl-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-person-circle me-1"></i>
                    Информация о пользователе
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-person-circle" style="font-size: 5rem; color: #6c757d;"></i>
                    <h5 class="mt-3">@Model.FullName</h5>
                    <p class="text-muted">@Model.Email</p>
                    <hr />
                    <h6>Текущие роли:</h6>
                    @foreach (var role in Model.CurrentRoles)
                    {
                        <span class="badge bg-primary me-1 mb-1">@role</span>
                    }
                    @if (!Model.CurrentRoles.Any())
                    {
                        <span class="text-muted">Нет назначенных ролей</span>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="EditRoles" asp-route-id="@Model.UserId" class="btn btn-primary w-100">
                        <i class="bi bi-shield-lock me-1"></i>Редактировать права
                    </a>
                </div>
            </div>

            <!-- Статистика -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-bar-chart me-1"></i>
                    Статистика входов
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-7">Всего входов:</dt>
                        <dd class="col-5 text-end">@Model.LoginHistory.Count</dd>
                        
                        @if (Model.LoginHistory.Any())
                        {
                            <dt class="col-7">Первый вход:</dt>
                            <dd class="col-5 text-end">@Model.LoginHistory.Last().Timestamp.ToLocalTime().ToString("dd.MM.yyyy")</dd>
                            
                            <dt class="col-7">Последний вход:</dt>
                            <dd class="col-5 text-end">@Model.LoginHistory.First().Timestamp.ToLocalTime().ToString("dd.MM.yyyy")</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>

        <!-- История входов -->
        <div class="col-xl-8">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-list-ul me-1"></i>
                    Журнал входов (последние 50 записей)
                </div>
                <div class="card-body">
                    @if (Model.LoginHistory.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Дата и время</th>
                                        <th>IP-адрес</th>
                                        <th>Детали</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 1;
                                    }
                                    @foreach (var login in Model.LoginHistory)
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>
                                                <span class="text-nowrap">
                                                    <i class="bi bi-calendar me-1"></i>
                                                    @login.Timestamp.ToLocalTime().ToString("dd.MM.yyyy")
                                                </span>
                                                <br />
                                                <small class="text-muted">
                                                    <i class="bi bi-clock me-1"></i>
                                                    @login.Timestamp.ToLocalTime().ToString("HH:mm:ss")
                                                </small>
                                            </td>
                                            <td>
                                                <code>@(login.IpAddress ?? "Неизвестен")</code>
                                            </td>
                                            <td>
                                                <small class="text-muted">@(login.Details ?? "-")</small>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox" style="font-size: 4rem; color: #6c757d;"></i>
                            <h5 class="mt-3 text-muted">Нет записей о входах</h5>
                            <p class="text-muted">Пользователь ещё не входил в систему или записи не сохранены.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Sessions" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Назад к мониторингу
        </a>
        <a asp-action="Users" class="btn btn-outline-primary">
            <i class="bi bi-people me-1"></i>Все пользователи
        </a>
    </div>
</div>
