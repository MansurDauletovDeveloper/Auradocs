@model DocumentFlow.Models.ViewModels.ITAdminDashboardViewModel
@{
    ViewData["Title"] = "IT Администрирование";
}

<!-- Page Header -->
<div class="mb-4">
    <h2 class="mb-1 d-flex align-items-center gap-2">
        <i class="bi bi-gear-fill text-primary"></i>
        IT Администрирование
    </h2>
    <p class="text-muted mb-0">Управление пользователями, ролями и безопасностью</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="stat-label">Всего пользователей</p>
                    <p class="stat-value">@Model.TotalUsers</p>
                </div>
                <div class="icon-box icon-box-primary">
                    <i class="bi bi-people-fill"></i>
                </div>
            </div>
            <a asp-action="Users" class="stat-link">
                Управление пользователями <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="stat-label">Активных пользователей</p>
                    <p class="stat-value text-success">@Model.ActiveUsers</p>
                </div>
                <div class="icon-box icon-box-success">
                    <i class="bi bi-person-check-fill"></i>
                </div>
            </div>
            <a asp-action="Sessions" class="stat-link">
                Мониторинг сессий <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="stat-label">Ролей в системе</p>
                    <p class="stat-value text-warning">@Model.TotalRoles</p>
                </div>
                <div class="icon-box icon-box-warning">
                    <i class="bi bi-shield-lock-fill"></i>
                </div>
            </div>
            <a asp-action="Roles" class="stat-link">
                Справочник ролей <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="stat-label">Тестовые аккаунты</p>
                    <p class="stat-value text-info"><i class="bi bi-key"></i></p>
                </div>
                <div class="icon-box icon-box-info">
                    <i class="bi bi-person-lines-fill"></i>
                </div>
            </div>
            <a asp-action="TestAccounts" class="stat-link">
                Логины и пароли <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
</div>

<!-- Role Statistics and Recent Logins -->
<div class="row g-4 mb-4">
    <!-- Role Distribution -->
    <div class="col-xl-6">
        <div class="card h-100">
            <div class="card-header d-flex align-items-center gap-2">
                <div class="icon-box-sm icon-box-light">
                    <i class="bi bi-bar-chart-fill"></i>
                </div>
                <span>Распределение по ролям</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table data-table mb-0">
                        <thead>
                            <tr>
                                <th>Роль</th>
                                <th class="text-center">Пользователей</th>
                                <th style="width: 60px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model.RoleStatistics.OrderByDescending(r => r.UserCount))
                            {
                                <tr>
                                    <td>
                                        <strong>@role.DisplayName</strong>
                                        <div class="text-muted small">@role.RoleName</div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @(role.UserCount > 0 ? "bg-primary" : "bg-secondary")">
                                            @role.UserCount
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Users" asp-route-roleFilter="@role.RoleName" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Logins -->
    <div class="col-xl-6">
        <div class="card h-100">
            <div class="card-header d-flex align-items-center gap-2">
                <div class="icon-box-sm icon-box-light">
                    <i class="bi bi-clock-history"></i>
                </div>
                <span>Последние входы</span>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentLogins.Any())
                {
                    <div class="table-responsive">
                        <table class="table data-table mb-0">
                            <thead>
                                <tr>
                                    <th>Пользователь</th>
                                    <th>Роли</th>
                                    <th>Время</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var login in Model.RecentLogins)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="user-avatar user-avatar-sm">
                                                    @(login.UserName?.FirstOrDefault().ToString().ToUpper() ?? "?")
                                                </div>
                                                <div>
                                                    <a asp-action="UserLoginHistory" asp-route-id="@login.UserId" class="text-decoration-none">
                                                        @login.UserName
                                                    </a>
                                                    <div class="text-muted small">@login.Email</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @foreach (var role in login.Roles.Take(2))
                                            {
                                                <span class="badge bg-secondary me-1">@role</span>
                                            }
                                            @if (login.Roles.Count > 2)
                                            {
                                                <span class="badge bg-light text-dark">+@(login.Roles.Count - 2)</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="text-muted">@login.LoginTime.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer bg-transparent text-end">
                        <a asp-action="Sessions" class="btn btn-sm btn-outline-primary">
                            Показать все <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                }
                else
                {
                    <div class="empty-state py-5">
                        <i class="bi bi-inbox"></i>
                        <h5>Нет записей о входах</h5>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="card">
    <div class="card-header d-flex align-items-center gap-2">
        <div class="icon-box-sm icon-box-light">
            <i class="bi bi-lightning-fill"></i>
        </div>
        <span>Быстрые действия</span>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <a asp-action="Users" class="btn btn-outline-primary w-100 py-3">
                    <i class="bi bi-people d-block mb-2" style="font-size: 1.5rem;"></i>
                    Все пользователи
                </a>
            </div>
            <div class="col-md-3">
                <a asp-action="Roles" class="btn btn-outline-warning w-100 py-3">
                    <i class="bi bi-shield-lock d-block mb-2" style="font-size: 1.5rem;"></i>
                    Справочник ролей
                </a>
            </div>
            <div class="col-md-3">
                <a asp-action="Sessions" class="btn btn-outline-success w-100 py-3">
                    <i class="bi bi-activity d-block mb-2" style="font-size: 1.5rem;"></i>
                    Мониторинг сессий
                </a>
            </div>
            <div class="col-md-3">
                <a asp-action="TestAccounts" class="btn btn-outline-info w-100 py-3">
                    <i class="bi bi-key d-block mb-2" style="font-size: 1.5rem;"></i>
                    Тестовые аккаунты
                </a>
            </div>
        </div>
    </div>
</div>
