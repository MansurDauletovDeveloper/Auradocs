@model DocumentFlow.Models.ViewModels.ITAdminDashboardViewModel
@{
    ViewData["Title"] = "IT Администрирование";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">
        <i class="bi bi-gear-fill me-2"></i>IT Администрирование
    </h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Панель управления</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Статистика -->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small text-white-50">Всего пользователей</div>
                            <div class="display-6">@Model.TotalUsers</div>
                        </div>
                        <i class="bi bi-people-fill" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-action="Users">Управление пользователями</a>
                    <i class="bi bi-arrow-right text-white"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small text-white-50">Активных пользователей</div>
                            <div class="display-6">@Model.ActiveUsers</div>
                        </div>
                        <i class="bi bi-person-check-fill" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-action="Sessions">Мониторинг сессий</a>
                    <i class="bi bi-arrow-right text-white"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-dark mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small text-dark opacity-75">Ролей в системе</div>
                            <div class="display-6">@Model.TotalRoles</div>
                        </div>
                        <i class="bi bi-shield-lock-fill" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-dark stretched-link" asp-action="Roles">Справочник ролей</a>
                    <i class="bi bi-arrow-right text-dark"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small text-white-50">Тестовые аккаунты</div>
                            <div class="display-6"><i class="bi bi-key"></i></div>
                        </div>
                        <i class="bi bi-person-lines-fill" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-action="TestAccounts">Логины и пароли</a>
                    <i class="bi bi-arrow-right text-white"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Статистика ролей -->
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-bar-chart-fill me-1"></i>
                    Распределение пользователей по ролям
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Роль</th>
                                    <th class="text-center">Пользователей</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model.RoleStatistics.OrderByDescending(r => r.UserCount))
                                {
                                    <tr>
                                        <td>
                                            <strong>@role.DisplayName</strong>
                                            <br />
                                            <small class="text-muted">@role.RoleName</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-@(role.UserCount > 0 ? "primary" : "secondary") rounded-pill">
                                                @role.UserCount
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <a asp-action="Users" asp-route-roleFilter="@role.RoleName" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Последние входы -->
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-clock-history me-1"></i>
                    Последние входы в систему
                </div>
                <div class="card-body">
                    @if (Model.RecentLogins.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Пользователь</th>
                                        <th>Роли</th>
                                        <th>Время</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var login in Model.RecentLogins)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-action="UserLoginHistory" asp-route-id="@login.UserId">
                                                    @login.UserName
                                                </a>
                                                <br />
                                                <small class="text-muted">@login.Email</small>
                                            </td>
                                            <td>
                                                @foreach (var role in login.Roles.Take(2))
                                                {
                                                    <span class="badge bg-secondary me-1">@role</span>
                                                }
                                                @if (login.Roles.Count > 2)
                                                {
                                                    <span class="badge bg-light text-dark">+@(login.Roles.Count - 2)</span>
                                                }
                                            </td>
                                            <td>
                                                <small>@login.LoginTime.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-end">
                            <a asp-action="Sessions" class="btn btn-sm btn-outline-primary">
                                Показать все <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                            <p class="mt-2">Нет записей о входах</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Быстрые действия -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-lightning-fill me-1"></i>
            Быстрые действия
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <a asp-action="Users" class="btn btn-outline-primary w-100 py-3">
                        <i class="bi bi-people d-block" style="font-size: 2rem;"></i>
                        Все пользователи
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a asp-action="Roles" class="btn btn-outline-warning w-100 py-3">
                        <i class="bi bi-shield-lock d-block" style="font-size: 2rem;"></i>
                        Справочник ролей
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a asp-action="Sessions" class="btn btn-outline-success w-100 py-3">
                        <i class="bi bi-activity d-block" style="font-size: 2rem;"></i>
                        Мониторинг сессий
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a asp-action="TestAccounts" class="btn btn-outline-info w-100 py-3">
                        <i class="bi bi-key d-block" style="font-size: 2rem;"></i>
                        Тестовые аккаунты
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
