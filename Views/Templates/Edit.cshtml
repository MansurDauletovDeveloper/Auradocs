@model DocumentFlow.Models.ViewModels.TemplateEditViewModel
@{
    ViewData["Title"] = "Редактирование шаблона";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Шаблоны</a></li>
                <li class="breadcrumb-item active">Редактирование</li>
            </ol>
        </nav>

        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Редактирование шаблона</h5>
                @if (!Model.IsActive)
                {
                    <span class="badge bg-secondary">Отключён</span>
                }
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DocumentType" class="form-label"></label>
                        <select asp-for="DocumentType" class="form-select" asp-items="Html.GetEnumSelectList<DocumentFlow.Models.Entities.DocumentType>()"></select>
                        <span asp-validation-for="DocumentType" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label">Текст шаблона</label>
                        <textarea asp-for="Content" class="form-control" rows="8"></textarea>
                        <div class="form-text">Используйте плейсхолдеры: {ФИО}, {Дата}, {Должность}</div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.CurrentFilePath))
                    {
                        <div class="mb-3">
                            <label class="form-label">Текущий файл</label>
                            <div class="d-flex align-items-center gap-2">
                                <a href="@Model.CurrentFilePath" class="btn btn-sm btn-outline-primary" target="_blank">
                                    <i class="bi bi-download me-1"></i>Скачать
                                </a>
                                <span class="text-muted small">@System.IO.Path.GetFileName(Model.CurrentFilePath)</span>
                            </div>
                        </div>
                    }

                    <div class="mb-4">
                        <label asp-for="TemplateFile" class="form-label">Загрузить новый файл</label>
                        <input asp-for="TemplateFile" class="form-control" accept=".doc,.docx,.pdf,.odt" />
                        <div class="form-text">Оставьте пустым, чтобы сохранить текущий файл</div>
                    </div>

                    <div class="d-flex flex-column flex-sm-row gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Сохранить
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
