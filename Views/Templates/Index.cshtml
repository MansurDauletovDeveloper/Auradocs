@model List<DocumentFlow.Models.ViewModels.TemplateListViewModel>
@{
    ViewData["Title"] = "Шаблоны документов";
}

<!-- Page Header -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
    <div>
        <h2 class="mb-1 d-flex align-items-center gap-2">
            <i class="bi bi-file-earmark-ruled text-primary"></i>
            Шаблоны документов
        </h2>
        <p class="text-muted mb-0 d-none d-md-block">Управление шаблонами для быстрого создания документов</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>Новый шаблон
    </a>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table data-table mb-0">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th class="d-none d-md-table-cell">Тип</th>
                            <th class="d-none d-lg-table-cell">Описание</th>
                            <th class="text-center">Статус</th>
                            <th class="text-end" style="width: 140px;">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var template in Model)
                        {
                            <tr class="animate-row @(!template.IsActive ? "table-secondary" : "")">
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="icon-box-sm @(template.IsActive ? "icon-box-primary" : "icon-box-light")">
                                            <i class="bi bi-file-earmark-text"></i>
                                        </div>
                                        <div>
                                            <div class="fw-medium">@template.Name</div>
                                            <small class="text-muted d-md-none">
                                                @(template.DocumentType switch {
                                                    DocumentFlow.Models.Entities.DocumentType.Application => "Заявление",
                                                    DocumentFlow.Models.Entities.DocumentType.Order => "Приказ",
                                                    DocumentFlow.Models.Entities.DocumentType.Contract => "Договор",
                                                    DocumentFlow.Models.Entities.DocumentType.Act => "Акт",
                                                    DocumentFlow.Models.Entities.DocumentType.Memo => "Служебная записка",
                                                    DocumentFlow.Models.Entities.DocumentType.Report => "Отчёт",
                                                    DocumentFlow.Models.Entities.DocumentType.Protocol => "Протокол",
                                                    _ => "Другое"
                                                })
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <span class="badge bg-secondary">
                                        @(template.DocumentType switch {
                                            DocumentFlow.Models.Entities.DocumentType.Application => "Заявление",
                                            DocumentFlow.Models.Entities.DocumentType.Order => "Приказ",
                                            DocumentFlow.Models.Entities.DocumentType.Contract => "Договор",
                                            DocumentFlow.Models.Entities.DocumentType.Act => "Акт",
                                            DocumentFlow.Models.Entities.DocumentType.Memo => "Служебная записка",
                                            DocumentFlow.Models.Entities.DocumentType.Report => "Отчёт",
                                            DocumentFlow.Models.Entities.DocumentType.Protocol => "Протокол",
                                            _ => "Другое"
                                        })
                                    </span>
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    <span class="text-muted">@(template.Description ?? "—")</span>
                                </td>
                                <td class="text-center">
                                    @if (template.IsActive)
                                    {
                                        <span class="status-dot active"></span>
                                        <span class="ms-1 small text-success">Активен</span>
                                    }
                                    else
                                    {
                                        <span class="status-dot"></span>
                                        <span class="ms-1 small text-muted">Отключён</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@template.Id" class="btn btn-outline-primary" title="Редактировать">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    <form asp-action="ToggleActive" asp-route-id="@template.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-secondary" title="@(template.IsActive ? "Отключить" : "Включить")">
                                            <i class="bi bi-@(template.IsActive ? "pause" : "play")"></i>
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(template.Id)" title="Удалить">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                                
                                <!-- Modal удаления -->
                                <div class="modal fade" id="deleteModal@(template.Id)" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Удаление шаблона</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body text-start">
                                                Вы уверены, что хотите удалить шаблон «@template.Name»?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                                                <form asp-action="Delete" asp-route-id="@template.Id" method="post">
                                                    <button type="submit" class="btn btn-danger">Удалить</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="empty-state py-5">
                <i class="bi bi-file-earmark-ruled"></i>
                <h5>Шаблоны пока не созданы</h5>
                <p class="mb-4">Создайте шаблоны для быстрого создания документов</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-1"></i>Создать первый шаблон
                </a>
            </div>
        </div>
    </div>
}
