@model DocumentFlow.Models.ViewModels.DocumentEditViewModel
@using DocumentFlow.Models.Entities
@{
    ViewData["Title"] = "Редактирование документа";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Documents" asp-action="Index">Документы</a></li>
        <li class="breadcrumb-item"><a asp-controller="Documents" asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a></li>
        <li class="breadcrumb-item active">Редактирование</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex align-items-center gap-2">
                <div class="icon-box-sm icon-box-warning">
                    <i class="bi bi-pencil-fill"></i>
                </div>
                <h4 class="mb-0">Редактирование документа</h4>
            </div>
            <div class="card-body">
                <!-- Document Info -->
                <div class="d-flex flex-wrap gap-4 mb-4 pb-3 border-bottom">
                    <div class="d-flex align-items-center gap-2">
                        <div class="icon-box-sm icon-box-light">
                            <i class="bi bi-person"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Автор</div>
                            <strong>@Model.AuthorName</strong>
                        </div>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <div class="icon-box-sm icon-box-light">
                            <i class="bi bi-calendar3"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Создан</div>
                            <strong>@Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</strong>
                        </div>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <div class="icon-box-sm icon-box-light">
                            <i class="bi bi-layers"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Версия</div>
                            <strong>v@Model.CurrentVersion</strong>
                        </div>
                    </div>
                </div>

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Status" />
                    <input type="hidden" asp-for="CurrentVersion" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row g-3 mb-3">
                        <div class="col-md-8">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="DocumentType" class="form-label"></label>
                            <select asp-for="DocumentType" class="form-select" asp-items="Html.GetEnumSelectList<DocumentType>()">
                            </select>
                            <span asp-validation-for="DocumentType" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Content" class="form-label">Содержимое (текст)</label>
                        <textarea asp-for="Content" class="form-control" rows="8"></textarea>
                    </div>

                    <!-- New Version Section -->
                    <div class="section-header mb-3">
                        <i class="bi bi-cloud-arrow-up"></i>
                        <span>Новая версия</span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewFile" class="form-label">Загрузить новую версию файла</label>
                        <input asp-for="NewFile" class="form-control" type="file" 
                               accept=".pdf,.doc,.docx,.xls,.xlsx,.txt,.rtf,.odt" />
                        <div class="form-text">При загрузке нового файла будет создана новая версия документа</div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ChangeDescription" class="form-label">Описание изменений</label>
                        <textarea asp-for="ChangeDescription" class="form-control" rows="2" 
                                  placeholder="Опишите, что было изменено..."></textarea>
                    </div>
                    
                    <div class="d-flex justify-content-between pt-3 border-top">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Отмена
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-lg me-1"></i>Сохранить изменения
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
