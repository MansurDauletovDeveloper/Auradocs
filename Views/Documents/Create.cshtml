@model DocumentFlow.Models.ViewModels.DocumentCreateViewModel
@using DocumentFlow.Models.Entities
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Создание документа";
    var templates = ViewBag.Templates as List<SelectListItem> ?? new List<SelectListItem>();
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-file-earmark-plus me-2"></i>Создание документа</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="Введите название документа" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DocumentType" class="form-label"></label>
                            <select asp-for="DocumentType" class="form-select" asp-items="Html.GetEnumSelectList<DocumentType>()">
                                <option value="">-- Выберите тип --</option>
                            </select>
                            <span asp-validation-for="DocumentType" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TemplateId" class="form-label">Шаблон (опционально)</label>
                            <select asp-for="TemplateId" class="form-select" asp-items="@templates">
                                <option value="">-- Без шаблона --</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" 
                                  placeholder="Краткое описание документа"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <ul class="nav nav-tabs mb-3" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#fileTab">
                                <i class="bi bi-upload me-1"></i>Загрузить файл
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#contentTab">
                                <i class="bi bi-pencil me-1"></i>Ввести текст
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="fileTab">
                            <div class="mb-3">
                                <label asp-for="File" class="form-label">Файл документа</label>
                                <input asp-for="File" class="form-control" type="file" 
                                       accept=".pdf,.doc,.docx,.xls,.xlsx,.txt,.rtf,.odt" />
                                <div class="form-text">Допустимые форматы: PDF, DOC, DOCX, XLS, XLSX, TXT, RTF, ODT. Максимальный размер: 50 МБ</div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="contentTab">
                            <div class="mb-3">
                                <label asp-for="Content" class="form-label">Содержимое документа</label>
                                <textarea asp-for="Content" class="form-control" rows="10" 
                                          placeholder="Введите текст документа..."></textarea>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Отмена
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check me-1"></i>Создать документ
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
