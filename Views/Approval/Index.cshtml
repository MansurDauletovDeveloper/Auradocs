@model DocumentFlow.Models.ViewModels.PendingApprovalsViewModel
@using DocumentFlow.Models.Entities
@{
    ViewData["Title"] = "Согласования";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-check2-square me-2"></i>Ожидающие согласования</h2>
    @if (Model.OverdueCount > 0)
    {
        <span class="badge bg-danger fs-6">
            <i class="bi bi-exclamation-triangle me-1"></i>Просрочено: @Model.OverdueCount
        </span>
    }
</div>

@if (Model.PendingApprovals.Any())
{
    <div class="row">
        @foreach (var request in Model.PendingApprovals)
        {
            <div class="col-md-6 mb-4">
                <div class="card @(request.IsOverdue ? "border-danger" : "")">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>
                            <i class="bi bi-file-earmark me-1"></i>
                            @GetDocumentTypeName(request.DocumentType)
                        </span>
                        @if (request.IsOverdue)
                        {
                            <span class="badge bg-danger">Просрочено!</span>
                        }
                        else if (request.DueDate.HasValue)
                        {
                            <small class="text-muted">
                                <i class="bi bi-clock me-1"></i>До @request.DueDate.Value.ToLocalTime().ToString("dd.MM.yyyy")
                            </small>
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@request.DocumentTitle</h5>
                        <p class="card-text text-muted">
                            <small>
                                <i class="bi bi-hash"></i> @request.DocumentRegistrationNumber<br />
                                <i class="bi bi-person"></i> От: @request.RequestedByName<br />
                                <i class="bi bi-calendar"></i> @request.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                            </small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Review" asp-route-id="@request.Id" class="btn btn-primary w-100">
                            <i class="bi bi-eye me-1"></i>Просмотреть и согласовать
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
        <h4 class="mt-3">Нет документов, ожидающих согласования</h4>
        <p class="text-muted">Все документы обработаны</p>
    </div>
}

@functions {
    string GetDocumentTypeName(DocumentType type) => type switch
    {
        DocumentType.Application => "Заявление",
        DocumentType.Order => "Приказ",
        DocumentType.Contract => "Договор",
        DocumentType.Act => "Акт",
        DocumentType.Memo => "Служебная записка",
        DocumentType.Report => "Отчёт",
        DocumentType.Protocol => "Протокол",
        _ => "Другое"
    };
}
