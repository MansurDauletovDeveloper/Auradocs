@model DocumentFlow.Models.ViewModels.DocumentDetailsViewModel
@using DocumentFlow.Models.Entities
@using DocumentFlow.Models.ViewModels
@{
    ViewData["Title"] = "Рассмотрение документа";
    var approvalRequest = ViewBag.ApprovalRequest as ApprovalRequestViewModel;
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Согласования</a></li>
        <li class="breadcrumb-item active">@Model.RegistrationNumber</li>
    </ol>
</nav>

<div class="row g-4">
    <div class="col-lg-8">
        <!-- Document Info Card -->
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center gap-2">
                <div class="icon-box-sm icon-box-primary">
                    <i class="bi bi-file-earmark-text-fill"></i>
                </div>
                <h4 class="mb-0">@Model.Title</h4>
            </div>
            <div class="card-body">
                <div class="row g-4 mb-4">
                    <div class="col-sm-6">
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <div class="icon-box-sm icon-box-light">
                                <i class="bi bi-hash"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Рег. номер</div>
                                <strong>@Model.RegistrationNumber</strong>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <div class="icon-box-sm icon-box-light">
                                <i class="bi bi-bookmark"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Тип</div>
                                <strong>@GetDocumentTypeName(Model.DocumentType)</strong>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-3">
                            <div class="icon-box-sm icon-box-light">
                                <i class="bi bi-person"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Автор</div>
                                <strong>@Model.AuthorName</strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <div class="icon-box-sm icon-box-light">
                                <i class="bi bi-calendar3"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Дата создания</div>
                                <strong>@Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</strong>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-3">
                            <div class="icon-box-sm icon-box-light">
                                <i class="bi bi-layers"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Версия</div>
                                <strong>v@Model.CurrentVersion</strong>
                            </div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="pt-3 border-top">
                        <h6 class="text-muted mb-2">Описание</h6>
                        <p class="mb-0">@Model.Description</p>
                    </div>
                }
            </div>
        </div>

        <!-- Document Files -->
        @if (Model.Versions.Any())
        {
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center gap-2">
                    <div class="icon-box-sm icon-box-light">
                        <i class="bi bi-paperclip"></i>
                    </div>
                    <h5 class="mb-0">Файлы документа</h5>
                </div>
                <div class="card-body p-0">
                    @foreach (var version in Model.Versions.Where(v => v.IsCurrent))
                    {
                        <a asp-controller="Documents" asp-action="DownloadVersion" asp-route-id="@version.Id" 
                           class="notification-item d-flex align-items-center gap-3 text-decoration-none">
                            <div class="icon-box-sm icon-box-primary flex-shrink-0">
                                <i class="bi bi-file-earmark-arrow-down"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong class="d-block">@version.FileName</strong>
                                <small class="text-muted">@FormatFileSize(version.FileSize)</small>
                            </div>
                            <span class="badge bg-primary">
                                <i class="bi bi-download me-1"></i>Скачать
                            </span>
                        </a>
                    }
                </div>
            </div>
        }

        <!-- Comments -->
        @if (Model.Comments.Any())
        {
            <div class="card">
                <div class="card-header d-flex align-items-center gap-2">
                    <div class="icon-box-sm icon-box-light">
                        <i class="bi bi-chat-dots"></i>
                    </div>
                    <h5 class="mb-0">Комментарии</h5>
                    <span class="badge bg-secondary ms-auto">@Model.Comments.Count</span>
                </div>
                <div class="card-body">
                    @foreach (var comment in Model.Comments)
                    {
                        @await Html.PartialAsync("_CommentPartial", comment)
                    }
                </div>
            </div>
        }
    </div>

    <div class="col-lg-4">
        @if (approvalRequest != null)
        {
            <div class="card border-warning mb-4">
                <div class="card-header bg-warning bg-opacity-10 text-warning d-flex align-items-center gap-2">
                    <i class="bi bi-exclamation-circle-fill"></i>
                    <h5 class="mb-0">Требуется решение</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-column gap-2 mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Запрос от:</span>
                            <strong>@approvalRequest.RequestedByName</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Дата:</span>
                            <span>@approvalRequest.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</span>
                        </div>
                        @if (approvalRequest.DueDate.HasValue)
                        {
                            <div class="d-flex justify-content-between text-danger">
                                <span>Срок:</span>
                                <strong>@approvalRequest.DueDate.Value.ToLocalTime().ToString("dd.MM.yyyy")</strong>
                            </div>
                        }
                    </div>

                    <form asp-action="Approve" method="post" class="mb-4">
                        <input type="hidden" name="RequestId" value="@approvalRequest.Id" />
                        <input type="hidden" name="DocumentId" value="@Model.Id" />
                        <div class="mb-3">
                            <label class="form-label">Комментарий (опционально)</label>
                            <textarea name="Comment" class="form-control" rows="2" placeholder="Добавьте комментарий..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle me-1"></i>Утвердить
                        </button>
                    </form>

                    <div class="text-center text-muted small mb-3">или</div>

                    <form asp-action="Reject" method="post">
                        <input type="hidden" name="RequestId" value="@approvalRequest.Id" />
                        <input type="hidden" name="DocumentId" value="@Model.Id" />
                        <div class="mb-3">
                            <label class="form-label">Причина отклонения <span class="text-danger">*</span></label>
                            <textarea name="Comment" class="form-control" rows="3" required 
                                      placeholder="Укажите причину..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-x-circle me-1"></i>Отклонить
                        </button>
                    </form>
                </div>
            </div>
        }

        <a asp-action="Index" class="btn btn-outline-secondary w-100">
            <i class="bi bi-arrow-left me-1"></i>К списку согласований
        </a>
    </div>
</div>

@functions {
    string GetDocumentTypeName(DocumentType type) => type switch
    {
        DocumentType.Application => "Заявление",
        DocumentType.Order => "Приказ",
        DocumentType.Contract => "Договор",
        DocumentType.Act => "Акт",
        DocumentType.Memo => "Служебная записка",
        DocumentType.Report => "Отчёт",
        DocumentType.Protocol => "Протокол",
        _ => "Другое"
    };

    string FormatFileSize(long bytes)
    {
        if (bytes == 0) return "0 B";
        string[] sizes = { "B", "KB", "MB", "GB" };
        int order = 0;
        double size = bytes;
        while (size >= 1024 && order < sizes.Length - 1)
        {
            order++;
            size /= 1024;
        }
        return $"{size:0.##} {sizes[order]}";
    }
}
