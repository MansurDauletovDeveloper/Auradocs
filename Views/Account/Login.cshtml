@model DocumentFlow.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вход в систему";
    Layout = "_Layout";
}

<div class="auth-wrapper">
    <div class="auth-card">
        <div class="card-header">
            <i class="bi bi-shield-lock-fill auth-icon d-block"></i>
            <h4>Вход в систему</h4>
            <p class="text-white-50 mb-0 small">Добро пожаловать в DocFlow</p>
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="mb-4">
                    <label asp-for="Email" class="form-label">Email адрес</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="user@example.com" autocomplete="email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="Password" class="form-label">Пароль</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                        <input asp-for="Password" class="form-control" autocomplete="current-password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                
                <div class="mb-4 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Запомнить меня</label>
                    </div>
                </div>
                
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Войти
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer">
            <p class="mb-0">Нет аккаунта? <a asp-action="Register" class="fw-semibold">Зарегистрироваться</a></p>
        </div>
    </div>

    <div class="auth-hint" style="max-width: 440px; width: 100%;">
        <h6><i class="bi bi-info-circle-fill text-primary"></i>Тестовые аккаунты</h6>
        <ul>
            <li><strong>Администратор:</strong> admin@documentflow.local / Admin123!</li>
            <li><strong>Руководитель:</strong> manager@documentflow.local / Manager123!</li>
            <li><strong>Сотрудник:</strong> employee@documentflow.local / Employee123!</li>
        </ul>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
