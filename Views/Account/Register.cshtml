@model DocumentFlow.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "_Layout";
}

<div class="auth-wrapper">
    <div class="auth-card" style="max-width: 520px;">
        <div class="card-header">
            <i class="bi bi-person-plus-fill auth-icon d-block"></i>
            <h4>Создание аккаунта</h4>
            <p class="text-white-50 mb-0 small">Присоединяйтесь к DocFlow</p>
        </div>
        <div class="card-body">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label">Фамилия</label>
                        <input asp-for="LastName" class="form-control" placeholder="Иванов" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label">Имя</label>
                        <input asp-for="FirstName" class="form-control" placeholder="Иван" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-3">
                    <label asp-for="MiddleName" class="form-label">Отчество <span class="text-muted small">(необязательно)</span></label>
                    <input asp-for="MiddleName" class="form-control" placeholder="Иванович" />
                    <span asp-validation-for="MiddleName" class="text-danger small"></span>
                </div>
                
                <div class="mt-3">
                    <label asp-for="Email" class="form-label">Email адрес</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="user@example.com" autocomplete="email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="row g-3 mt-0">
                    <div class="col-md-6">
                        <label asp-for="Position" class="form-label">Должность <span class="text-muted small">(необязательно)</span></label>
                        <input asp-for="Position" class="form-control" placeholder="Специалист" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Department" class="form-label">Отдел <span class="text-muted small">(необязательно)</span></label>
                        <input asp-for="Department" class="form-control" placeholder="IT отдел" />
                    </div>
                </div>
                
                <hr class="my-4">
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label">Пароль</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                            <input asp-for="Password" class="form-control" autocomplete="new-password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ConfirmPassword" class="form-label">Подтверждение</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-key"></i></span>
                            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-lg me-2"></i>Создать аккаунт
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer">
            <p class="mb-0">Уже есть аккаунт? <a asp-action="Login" class="fw-semibold">Войти</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
