<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="theme-color" content="#4f46e5" />
    <meta name="description" content="Современная система электронного документооборота" />
    <title>@ViewData["Title"] - DocFlow</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-stack"></i>
                    <span class="d-none d-sm-inline">DocFlow</span>
                    <span class="d-sm-none">DF</span>
                </a>
                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-label="Меню">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-grid-1x2-fill"></i>
                                    <span>Главная</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Documents" && ViewContext.RouteData.Values["action"]?.ToString() != "Create" ? "active" : "")" asp-controller="Documents" asp-action="Index">
                                    <i class="bi bi-folder2-open"></i>
                                    <span>Документы</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "active" : "")" asp-controller="Documents" asp-action="Create">
                                    <i class="bi bi-plus-circle-fill"></i>
                                    <span>Создать</span>
                                </a>
                            </li>
                            @if (User.IsInRole("Manager") || User.IsInRole("Administrator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Approval" ? "active" : "")" asp-controller="Approval" asp-action="Index">
                                        <i class="bi bi-clipboard2-check-fill"></i>
                                        <span>Согласование</span>
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Administrator"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" || ViewContext.RouteData.Values["controller"]?.ToString() == "Templates" ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-sliders2"></i>
                                        <span>Управление</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Users"><i class="bi bi-people-fill"></i>Пользователи</a></li>
                                        <li><a class="dropdown-item" asp-controller="Templates" asp-action="Index"><i class="bi bi-file-earmark-ruled-fill"></i>Шаблоны</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="AuditLogs"><i class="bi bi-journal-text"></i>Журнал аудита</a></li>
                                    </ul>
                                </li>
                            }
                            @if (User.IsInRole("Administrator") || User.IsInRole("ITIntegrator"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["controller"]?.ToString() == "ITAdmin" ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-gear-wide-connected"></i>
                                        <span>IT Admin</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="ITAdmin" asp-action="Index"><i class="bi bi-speedometer"></i>Панель управления</a></li>
                                        <li><a class="dropdown-item" asp-controller="ITAdmin" asp-action="Users"><i class="bi bi-shield-lock-fill"></i>Права пользователей</a></li>
                                        <li><a class="dropdown-item" asp-controller="ITAdmin" asp-action="Sessions"><i class="bi bi-activity"></i>Мониторинг сессий</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="ITAdmin" asp-action="Roles"><i class="bi bi-tags-fill"></i>Справочник ролей</a></li>
                                        <li><a class="dropdown-item" asp-controller="ITAdmin" asp-action="TestAccounts"><i class="bi bi-key-fill"></i>Тестовые аккаунты</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>
                        <ul class="navbar-nav align-items-lg-center">
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-controller="Notifications" asp-action="Index" title="Уведомления">
                                    <i class="bi bi-bell-fill fs-5"></i>
                                    <span id="notificationBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none">0</span>
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown">
                                    <div class="user-avatar">
                                        <i class="bi bi-person-fill"></i>
                                    </div>
                                    <span class="d-none d-md-inline">@User.Identity?.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="dropdown-header px-3 py-2">
                                        <small class="text-muted">Аккаунт</small>
                                    </li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person-circle"></i>Мой профиль</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword"><i class="bi bi-shield-lock"></i>Сменить пароль</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right"></i>Выйти из системы</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ms-auto align-items-lg-center gap-2">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i>
                                    <span>Вход</span>
                                </a>
                            </li>
                            <li class="nav-item d-none d-lg-block">
                                <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus-fill me-1"></i>Регистрация
                                </a>
                            </li>
                            <li class="nav-item d-lg-none">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus-fill"></i>
                                    <span>Регистрация</span>
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid py-4 py-md-5 flex-grow-1">
        <div class="animate-fade-in">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show animate-slide-up mb-4" role="alert">
                    <i class="bi bi-check-circle-fill"></i>
                    <span>@TempData["SuccessMessage"]</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show animate-slide-up mb-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <span>@TempData["ErrorMessage"]</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                </div>
            }
            @RenderBody()
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-2">
                <small>&copy; @DateTime.Now.Year DocFlow — Система документооборота</small>
                <small class="text-muted">Версия 2.0</small>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <script>
            (function() {
                function updateBadge() {
                    fetch('/Notifications/GetUnreadCount')
                        .then(r => r.json())
                        .then(d => {
                            const b = document.getElementById('notificationBadge');
                            if (d.count > 0) {
                                b.textContent = d.count > 9 ? '9+' : d.count;
                                b.classList.remove('d-none');
                            } else {
                                b.classList.add('d-none');
                            }
                        }).catch(() => {});
                }
                updateBadge();
                setInterval(updateBadge, 60000);
            })();
        </script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
